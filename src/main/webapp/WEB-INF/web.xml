<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>UserAuth</filter-name>
        <filter-class>br.edu.ifpb.db.myplaces.filters.UserAuth</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserAuth</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>br.edu.ifpb.db.myplaces.servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>newPostServlet</servlet-name>
        <servlet-class>br.edu.ifpb.db.myplaces.servlets.newPostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewPostServlet</servlet-name>
        <servlet-class>br.edu.ifpb.db.myplaces.servlets.NewPostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FeedServlet</servlet-name>
        <servlet-class>br.edu.ifpb.db.myplaces.servlets.FeedServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LikeServlet</servlet-name>
        <servlet-class>br.edu.ifpb.db.myplaces.servlets.LikeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommentPostServlet</servlet-name>
        <servlet-class>br.edu.ifpb.db.myplaces.servlets.CommentPostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCommentServlet</servlet-name>
        <servlet-class>br.edu.ifpb.db.myplaces.servlets.DeleteCommentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SuggestServlet</servlet-name>
        <servlet-class>br.edu.ifpb.db.myplaces.servlets.SuggestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountRegisterServlet</servlet-name>
        <servlet-class>br.edu.ifpb.db.myplaces.servlets.AccountRegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Loggout</servlet-name>
        <servlet-class>br.edu.ifpb.db.myplaces.servlets.Loggout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>br.edu.ifpb.db.myplaces.servlets.ProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FollowServlet</servlet-name>
        <servlet-class>br.edu.ifpb.db.myplaces.servlets.FollowServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PreferServlet</servlet-name>
        <servlet-class>br.edu.ifpb.db.myplaces.servlets.PreferServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>newPostServlet</servlet-name>
        <url-pattern>/newPost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewPostServlet</servlet-name>
        <url-pattern>/admin/newPost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FeedServlet</servlet-name>
        <url-pattern>/admin/newsFeed</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LikeServlet</servlet-name>
        <url-pattern>/admin/like</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommentPostServlet</servlet-name>
        <url-pattern>/admin/comment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCommentServlet</servlet-name>
        <url-pattern>/admin/deleteComment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SuggestServlet</servlet-name>
        <url-pattern>/admin/suggests</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountRegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Loggout</servlet-name>
        <url-pattern>/admin/loggout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/admin/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FollowServlet</servlet-name>
        <url-pattern>/admin/follow</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PreferServlet</servlet-name>
        <url-pattern>/admin/prefer</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
